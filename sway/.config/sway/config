font pango:Inter 11
default_border pixel 3
default_floating_border pixel 3 
floating_maximum_size -1 x -1
smart_gaps on
smart_borders on
gaps inner 3
gaps outer 3 

title_align center
titlebar_padding 3

focus_follows_mouse always
mouse_warping container

popup_during_fullscreen smart 

set $border_active_bg       #3b84c0
set $border_active_fg       #e6efff
set $border_inactive_bg     #353b45
set $border_inactive_fg     #e6efff
set $border_unfocused_bg    #5e81ac
set $background             #2E3440

# Window Border color
# class                 border              background           text                indicator           child_border
client.focused          $border_active_bg   $border_active_bg    $border_active_fg   $border_active_bg   $border_active_bg
client.focused_inactive $border_inactive_bg $border_unfocused_bg $border_inactive_fg $border_inactive_bg $border_inactive_bg
client.unfocused        $border_inactive_bg $border_inactive_bg $border_inactive_fg $border_inactive_bg $border_inactive_bg
client.urgent           $border_inactive_bg $border_inactive_bg  $border_inactive_fg $border_inactive_bg $border_inactive_bg
client.placeholder      $border_inactive_bg $border_inactive_bg  $border_inactive_fg $border_inactive_bg $border_inactive_bg
client.background       $background

# Do on Startup
#
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Papirus-Dark'
    gsettings set $gnome-schema cursor-theme 'Breeze_Snow'
    gsettings set $gnome-schema font-name 'Inter Medium 11'
    gsettings set org.gnome.desktop.default-applications.terminal exec $term
    gsettings set org.gnome.desktop.default-applications.terminal exec-arg -e
}

exec --no-startup-id light -N 10
exec --no-startup-id /usr/libexec/xfce-polkit
exec powerprofilesctl set power-saver

include /etc/sway/config.d/*
